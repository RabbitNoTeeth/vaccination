<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_196">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_196"
            android:scaleType="centerCrop"
            android:src="@mipmap/temp1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_user"
                />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:text="小明"
                android:textColor="@color/gray1"
                android:drawableRight="@mipmap/ic_edit"
                android:drawablePadding="@dimen/dp_8"
                android:textSize="@dimen/sp_18"
                />
        </LinearLayout>
    </RelativeLayout>


    <TextView
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:textSize="@dimen/sp_16"
    android:textColor="@color/gray1"
    android:text="我的登记信息"
    android:drawableLeft="@mipmap/my1"
    android:drawableRight="@mipmap/icon_back_right"
    android:drawablePadding="@dimen/dp_6"
    />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/gray3"/>

    <TextView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/gray1"
        android:text="接种查询"
        android:drawableLeft="@mipmap/my2"
        android:drawableRight="@mipmap/icon_back_right"
        android:drawablePadding="@dimen/dp_6"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/gray3"/>


    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/gray1"
        android:text="关于我们"
        android:drawableLeft="@mipmap/my3"
        android:drawableRight="@mipmap/icon_back_right"
        android:drawablePadding="@dimen/dp_6"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/gray3"/>

    <TextView
        android:id="@+id/opinion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/gray1"
        android:text="用户反馈"
        android:drawableLeft="@mipmap/my4"
        android:drawableRight="@mipmap/icon_back_right"
        android:drawablePadding="@dimen/dp_6"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:textSize="@dimen/sp_20"
            android:text="退出"
            android:textColor="@color/white"
            app:qmui_backgroundColor="@color/blue"
            app:qmui_borderColor="@color/qmui_s_link_color"
            app:qmui_borderWidth="1dp"
            app:qmui_radius="8dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            />
    </FrameLayout>



</LinearLayout>